<div class="container" style="padding: 2rem 4rem !important">
    <!--
    ==========
    Header...
    ==========
    -->
    <h2 class="_header">
        <%= @staff.fullname %>'s
        <b><span class="grey-text text-lighten-2">Profile</span></b>
    </h2>
    <ul class="col s12">
        <% if current_user %>
        <li class="col s6 mt-3 mb-3"><p class="u_info">Branch: <span class="grey-text"><%= @this_dojo.branch %></span></p></li>
        <li class="col s6 mt-3 mb-3"><p class="u_info">Title: <span class="grey-text"><%= @title %></span></p></li>
        <li class="col s6 mt-3 mb-3"><p class="u_info">Email: <span class="grey-text"><%= @staff.email %></span></p></li>
        <% else %>
        <li class="col s6 mt-3 mb-3"><h5>Branch: <span class="grey-text"><%= @this_dojo.branch %></span></h5></li>
        <li class="col s6 mt-3 mb-3"><h5>Title: <span class="grey-text"><%= @title %></span></h5></li>
        <li class="col s6 mt-3 mb-3"><h5>Email: <span class="grey-text"><%= @staff.email %></span></h5></li>
        <% end %>
    </ul>
    <br/>

    <!--
    =========================
    Dojo/Student Cohort Table
    =========================
    -->
    <% if current_user %>
    <% if @any_staff %>
    <table class="highlight">
        <h4 class="cheading-view top-margin2">Students Registered by this User</h4>
        <thead>
        <tr>
            <th class="theader">First Name</th>
            <th class="theader">Last Name </th>
            <th class="theader">Email     </th>
            <th class="theader">Date      </th>
        </tr>
        </thead>
        <tbody>
            <div>
                <% @staff.students.each do |student| %>
                <tr class="trbody">
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name  %></td>
                    <td><%= student.email      %></td>
                    <td class="grey-text text-lighten-2"><%= student.created_at %></td>
                </tr>
                <% end %>
            </div>
        </tbody>
    </table>
    <% else %>
    <h4 class="grey-text text-lighten-1 top-margin4 _header"
        style="margin:2rem 0 !important"
    >
        No Student has been registered,
        <b class="grey-text text-lighten-2">Yet!</b>
    </h4>
    <% end %>

    <!--
    Actions
    -->
    <div class="center">
        <%=
          link_to  'Edit Account',
          edit_user_registration_path(current_user),
          class:'btn edit sn #00ff00b5-text top-margin4',
          style:'border-radius:.25rem !important'
        %>
    </div>
    <% end %>
</div>

<% if current_user %>
<%= link_to 'Register New Student', new_dojo_students_path(@this_dojo), class:'btn sn bottom-links' %>
<% end %>
<%= link_to 'Back', dojo_path(@this_dojo), class:'btn sn bottom-links right limits' %>
